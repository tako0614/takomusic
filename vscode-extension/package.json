{
  "name": "takomusic",
  "displayName": "TakoMusic",
  "description": "Language support for TakoMusic v4 (.mf files)",
  "version": "4.0.0",
  "publisher": "tako0614",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "music",
    "composition",
    "dsl",
    "midi",
    "vocaloid",
    "takomusic"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tako0614/takomusic"
  },
  "homepage": "https://music.takos.jp",
  "license": "AGPL-3.0",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:takomusic"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^3.0.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "takomusic",
        "aliases": [
          "TakoMusic",
          "MusicForge Script",
          "mfs"
        ],
        "extensions": [
          ".mf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "takomusic",
        "scopeName": "source.takomusic",
        "path": "./syntaxes/takomusic.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "takomusic",
        "path": "./snippets/takomusic.json"
      }
    ]
  }
}
